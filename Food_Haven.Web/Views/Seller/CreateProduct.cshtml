                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        // ======= MAIN IMAGE =======
                        const mainInput = document.getElementById('product-image-input');
                        const mainPreview = document.getElementById('product-img');

                        if (mainInput && mainPreview) {
                            mainInput.addEventListener('change', function (e) {
                                const file = e.target.files[0];
                                if (file) {
                                    const reader = new FileReader();
                                    reader.onload = function (event) {
                                        mainPreview.src = event.target.result;
                                    };
                                    reader.readAsDataURL(file);
                                } else {
                                    mainPreview.src = "/images/placeholder-image.png";
                                }
                            });
                        }

                        // ======= GALLERY IMAGE WITH MAX LIMIT + SWEETALERT =======
                        const galleryInput = document.getElementById('galleryImageInput');
                        const galleryList = document.getElementById('galleryPreviewList');
                        let selectedGalleryFiles = [];

                        galleryInput.addEventListener('change', function (e) {
                            const newFiles = Array.from(e.target.files);
                            const total = selectedGalleryFiles.length + newFiles.length;

                            if (total > 4) {
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'Image limit!',
                                    text: 'You can only select up to 4 images',
                                    confirmButtonText: 'OK'
                                });
                                return;
                            }

                            selectedGalleryFiles = selectedGalleryFiles.concat(newFiles);
                            renderGalleryPreviews();
                        });

                        function renderGalleryPreviews() {
                            galleryList.innerHTML = '';

                            selectedGalleryFiles.forEach((file, index) => {
                                const reader = new FileReader();
                                reader.onload = function (event) {
                                    const li = document.createElement('li');
                                    li.className = 'list-group-item d-flex justify-content-between align-items-center';
                                    li.style.gap = '10px';

                                    li.innerHTML = `
                                            <div class="d-flex align-items-center" style="gap: 10px;">
                                                <img src="${event.target.result}" alt="${file.name}" style="width: 40px; height: 40px; object-fit: cover;" class="rounded">
                                                <div>
                                                    <div>${file.name}</div>
                                                    <div class="text-muted small">${(file.size / 1024).toFixed(1)} KB</div>
                                                </div>
                                            </div>
                                            <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                        `;

                                    li.querySelector('button').addEventListener('click', function () {
                                        selectedGalleryFiles.splice(index, 1);
                                        updateInputFiles();
                                        renderGalleryPreviews();
                                    });

                                    galleryList.appendChild(li);
                                };
                                reader.readAsDataURL(file);
                            });

                            updateInputFiles();
                        }

                        function updateInputFiles() {
                            const dataTransfer = new DataTransfer();
                            selectedGalleryFiles.forEach(file => {
                                dataTransfer.items.add(file);
                            });
                            galleryInput.files = dataTransfer.files;
                        }
                    });
                </script>

