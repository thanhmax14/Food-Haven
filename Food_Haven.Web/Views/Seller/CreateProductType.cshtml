@model Repository.ViewModels.ProductVariantCreateViewModel
@{
    ViewBag.Title = "Create Product Type";
    //bool isActive = ViewBag.IsActive;
    bool isActive = ViewBag.IsActive as bool? ?? true;
    string storeStatusText = ViewBag.StoreStatusText as string ?? "Pending";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg"
      data-sidebar-image="none" data-preloader="disable" data-theme="default" data-theme-colors="default">


