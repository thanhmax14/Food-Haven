                            <script>
                                document.addEventListener("DOMContentLoaded", function () {
                                    function fetchComplaints() {
                                        fetch("/seller/GetComplaint", {
                                            method: "POST",
                                            headers: { "Content-Type": "application/json" },
                                            body: JSON.stringify({})
                                        })
                                            .then(response => response.json())
                                            .then(data => {
                                                if (!data || !Array.isArray(data)) {
                                                    console.warn("❌ Dữ liệu không hợp lệ");
                                                    return;
                                                }
                                                renderComplaintTables(data);
                                            })
                                            .catch(error => console.error("❌ Lỗi khi tải khiếu nại:", error));
                                    }

                                    function renderComplaintTables(complaints) {
                                        const statusMap = {
                                            pendingTable: "PENDING",
                                            warrantyTable: "PRODUCT WARRANTY",
                                            refundTable: "REFUND",
                                            reportTable: "REPORT TO ADMIN"
                                        };

                                        Object.entries(statusMap).forEach(([elementId, status]) => {
                                            const filtered = complaints.filter(c => c.status?.toUpperCase() === status.toUpperCase());
                                            const upperStatus = status.toUpperCase();

                                            const baseColumns = [
                                                {
                                                    id: "id",
                                                    name: "ID",
                                                    hidden: true // 👈 Ẩn cột này khỏi giao diện
                                                },
                                                { id: "stt", name: "STT" },
                                                { id: "orderCode", name: "Order" },
                                                { id: "userName", name: "User" },
                                                {
                                                    id: "description", name: "User Description",
                                                    formatter: text => text || "No description"
                                                }
                                            ];

                                            // Seller Reply cho Refund / Warranty / Report
                                            if (["REFUND", "PRODUCT WARRANTY", "REPORT TO ADMIN"].includes(upperStatus)) {
                                                baseColumns.push({
                                                    id: "sellerReply", name: "Seller Reply",
                                                    formatter: reply => reply || "No response yet"
                                                });
                                            }

                                            // Admin Reply + Report Status cho Report
                                            if (upperStatus === "REPORT TO ADMIN") {
                                                baseColumns.push({
                                                    id: "adminReply", name: "Admin Reply",
                                                    formatter: reply => reply || "No response yet"
                                                });
                                                baseColumns.push({
                                                    id: "reportStatus", name: "Report Status",
                                                    formatter: value => {
                                                        const colorMap = {
                                                            Pending: "warning",
                                                            Accept: "success",
                                                            Reject: "danger"
                                                        };
                                                        const color = colorMap[value] || "secondary";
                                                        return gridjs.html(`<span class="badge bg-${color}">${value}</span>`);
                                                    }
                                                });
                                            }

                                            // Created Date
                                            baseColumns.push({
                                                id: "createdDate", name: "Order Date",
                                                formatter: (e) => {
                                                    if (!e) return "N/A";
                                                    const date = new Date(e);
                                                    return `${date.getDate().toString().padStart(2, '0')}/${(date.getMonth() + 1).toString().padStart(2, '0')}/${date.getFullYear()} ${date.getHours().toString().padStart(2, '0')}:${date.getMinutes().toString().padStart(2, '0')}:${date.getSeconds().toString().padStart(2, '0')}`;
                                                },
                                                sort: true
                                            });

                                            // Reply Date
                                            baseColumns.push({
                                                id: "replyDate", name: "Reply Date",
                                                formatter: (e) => {
                                                    if (!e) return "Chưa phản hồi";
                                                    const date = new Date(e);
                                                    return `${date.getDate().toString().padStart(2, '0')}/${(date.getMonth() + 1).toString().padStart(2, '0')}/${date.getFullYear()} ${date.getHours().toString().padStart(2, '0')}:${date.getMinutes().toString().padStart(2, '0')}:${date.getSeconds().toString().padStart(2, '0')}`;
                                                }
                                            });

                                            baseColumns.push({
                                                name: "Action",
                                                formatter: (cell, row) => {
                                                    const id = row.cells[0].data; // id phải nằm ở cột đầu tiên
                                                    return gridjs.html(`
                                            <a href="/seller/Detailcomplant/${id}" class="btn btn-sm btn-outline-primary" target="_blank">
                                                <i class="ri-eye-line"></i> View
                                            </a>
                                        `);
                                                }
                                            });




                                            const target = document.getElementById(elementId);
                                            if (!target) return;
                                            target.innerHTML = "";

                                            new gridjs.Grid({
                                                columns: baseColumns,
                                                data: filtered.map((c, index) => ({
                                                    ...c,
                                                    stt: index + 1
                                                })),
                                                pagination: { enabled: true, limit: 5 },
                                                sort: true,
                                                search: { enabled: true },
                                                language: {
                                                    search: { placeholder: 'Searching for complaints...' },
                                                    pagination: {
                                                        previous: 'Previous ', next: 'Next ', showing: 'Display', results: () => 'Complaint'
                                                    },
                                                    noRecordsFound: 'No data available.'
                                                }
                                            }).render(target);
                                        });
                                    }

                                    fetchComplaints();
                                });
                            </script>








