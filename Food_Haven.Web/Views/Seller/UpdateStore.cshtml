    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                            <h4 class="mb-sm-0">Store Details</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                    <li class="breadcrumb-item active">Form Layout</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->
                @if (ViewBag.StoreLocked != null && (bool)ViewBag.StoreLocked == true)
                {
                    <div class="alert alert-danger text-center">
                        <p><strong>Your store has been locked due to a policy violation!</strong></p>
                        <p>Please contact support for further assistance.</p>
                    </div>

                    <div class="row">
                        <div class="col-xxl-12">
                            <div class="card">
                                <div class="card-header align-items-center d-flex">
                                    <h4 class="card-title mb-0 flex-grow-1">Update Your Store</h4>
                                </div>

                                <div class="card-body">
                                    <div class="live-preview">
                                        <form method="post" asp-page-handler="Update1" enctype="multipart/form-data">
                                            <input type="hidden" asp-for="ID" />

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="Name" class="form-label">Store Name</label>
                                                        <input asp-for="Name" class="form-control" disabled />
                                                        <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="CreatedDate" class="form-label">Created Date</label>
                                                        <input asp-for="CreatedDate" class="form-control" readonly type="date" disabled />
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="ModifiedDate" class="form-label">Modified Date</label>
                                                        <input asp-for="ModifiedDate" class="form-control" readonly type="date" disabled />
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="mb-3">
                                                        <label asp-for="ShortDescriptions" class="form-label">Short Description</label>
                                                        <input asp-for="ShortDescriptions" class="form-control" disabled />
                                                        <span asp-validation-for="ShortDescriptions" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label asp-for="LongDescriptions" class="form-label">Detail Description</label>
                                                    <textarea asp-for="LongDescriptions" class="form-control" id="ckeditor-classic"></textarea>
                                                    <span asp-validation-for="LongDescriptions" class="text-danger"></span>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="Address" class="form-label">Address</label>
                                                        <input asp-for="Address" class="form-control" disabled />
                                                        <span asp-validation-for="Address" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="Phone" class="form-label">Phone Number</label>
                                                        <input asp-for="Phone" class="form-control" disabled />
                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label class="form-label">Current Store Image</label>
                                                        <div>
                                                            @if (!string.IsNullOrEmpty(Model.Img))
                                                            {
                                                                <img id="currentImage" src="@Model.Img" alt="Store Image" class="img-fluid rounded" style="max-height: 200px;" />
                                                            }
                                                            else
                                                            {
                                                                <p class="text-muted">No image available</p>
                                                            }
                                                        </div>

                                                        <label class="form-label mt-2">Upload New Image</label>
                                                        <input type="file" name="ImgFile" class="form-control" accept=".png, .jpeg, .jpg" id="imgInput" disabled>
                                                        <small class="text-muted">Supported formats: PNG, JPEG, JPG</small>

                                                        <!-- Ảnh Xem Trước -->
                                                        <div class="mt-2">
                                                            <img id="previewImage" src="" class="img-thumbnail d-none" style="max-width: 200px; max-height: 150px;">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-12 text-end">
                                                    <a href="/Seller/ViewStore" class="btn btn-secondary px-4">Back To Profile</a>
                                                    <button type="submit" class="btn btn-primary px-4" disabled>Update Store</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                } else
                {
                    <div class="row">
                        <div class="col-xxl-12">
                            <div class="card">
                                <div class="card-header align-items-center d-flex">
                                    <h4 class="card-title mb-0 flex-grow-1">Update Your Store</h4>
                                </div>

                                <div class="card-body">
                                    <div class="live-preview">
                                        <form method="post" asp-page-handler="Update1" enctype="multipart/form-data">
                                            <input type="hidden" asp-for="ID" />

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="Name" class="form-label">Store Name</label>
                                                        <input asp-for="Name" class="form-control" />
                                                        <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="CreatedDate" class="form-label">Created Date</label>
                                                        <input asp-for="CreatedDate" class="form-control" readonly type="date" />
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="ModifiedDate" class="form-label">Modified Date</label>
                                                        <input asp-for="ModifiedDate" class="form-control" readonly type="date" />
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="mb-3">
                                                        <label asp-for="ShortDescriptions" class="form-label">Short Description</label>
                                                        <input asp-for="ShortDescriptions" class="form-control" />
                                                        <span asp-validation-for="ShortDescriptions" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label asp-for="LongDescriptions" class="form-label">Detail Description</label>
                                                    <textarea asp-for="LongDescriptions" class="form-control" id="ckeditor-classic"></textarea>
                                                    <span asp-validation-for="LongDescriptions" class="text-danger"></span>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="Address" class="form-label">Address</label>
                                                        <input asp-for="Address" class="form-control" />
                                                        <span asp-validation-for="Address" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label asp-for="Phone" class="form-label">Phone Number</label>
                                                        <input asp-for="Phone" class="form-control" />
                                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label class="form-label">Current Store Image</label>
                                                        <div>
                                                            @if (!string.IsNullOrEmpty(Model.Img))
                                                            {
                                                                <img id="currentImage" src="@Model.Img" alt="Store Image" class="img-fluid rounded" style="max-height: 200px;" />
                                                            }
                                                            else
                                                            {
                                                                <p class="text-muted">No image available</p>
                                                            }
                                                        </div>

                                                        <label class="form-label mt-2">Upload New Image</label>
                                                        <input type="file" name="ImgFile" class="form-control" accept=".png, .jpeg, .jpg" id="imgInput">
                                                        <small class="text-muted">Supported formats: PNG, JPEG, JPG</small>

                                                        <!-- Ảnh Xem Trước -->
                                                        <div class="mt-2">
                                                            <img id="previewImage" src="" class="img-thumbnail d-none" style="max-width: 200px; max-height: 150px;">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-12 text-end">
                                                    <a href="/Seller/ViewStore" class="btn btn-sm btn-secondary px-3">Back To Profile</a>
                                                    <button type="submit" class="btn btn-sm btn-primary px-3">Update Store</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                

