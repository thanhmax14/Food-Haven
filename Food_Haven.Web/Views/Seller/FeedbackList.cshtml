                <script>
					
                    document.addEventListener("DOMContentLoaded", function () {
                        if (document.getElementById("table-feedback")) {
                            var reviews = @Html.Raw(JsonSerializer.Serialize(Model, new JsonSerializerOptions { PropertyNamingPolicy = null }));

                            new gridjs.Grid({
                                columns: [
                                    { name: "ID", hidden: true }, // Cột ID bị ẩn
                                    { name: "Product Name", width: "150px" },
                                    { name: "User Name", width: "150px" },
                                    { name: "Comment", width: "250px" },
                                    { name: "Comment Date", width: "150px" },
                                    { name: "Rating", width: "150px" },
                                    { name: "Reply", width: "250px" },
                                                        {
                        name: "Status",
                        width: "150px",
                        formatter: (cell, row) => {
                            let statusClass = {
                                "Active": "bg-success-subtle text-success",
                                "Disabled": "bg-danger-subtle text-danger"
                            }[cell] || "bg-secondary-subtle text-secondary";

                            return gridjs.html(`<span id="row-${row.cells[0].data}" class="badge ${statusClass}">${cell}</span>`);
                        }
                    }
                    ,
                                        {
                        name: "Actions",
                        width: "150px",
                        formatter: (_, row) => {
                            let status = row.cells[7].data; // Trạng thái Feedback (Active/Deactive)
                            let feedbackId = row.cells[0].data; // Lấy ID của Feedback
                            let reply = row.cells[6].data; // Lấy nội dung Reply
                            let url = `/Seller/ReplyFeedback/${feedbackId}`; // Tạo URL động

                            let actionText = status === "Active" ? "Hide" : "Show";
                            let actionIcon = status === "Active" ? "btn btn-sm btn-danger" : "btn btn-sm btn-success";

                            let replyButton = reply !== "No reply" ? "" : `

                                <a class="btn btn-sm btn-primary" target="_blank" href="${url}">Reply</a>
                                `;
                            return gridjs.html(`

                                    <div class="d-flex gap-2">
                                        ${replyButton}

                                            <button class="toggle-feedback-btn ${actionIcon}"
                                                data-feedbackid="${feedbackId}"
                                                data-status="${status}">
                                                ${actionText}
                                            </button>
                                    </div
                            `);
                        }
                    }
                                ],
                                pagination: {
                                    enabled: true,
                                    limit: 10,
                                    summary: true
                                },
                                pageSize: [10, 20, 30, 40, 50],
                                sort: true,
                                search: true,
                                data: reviews.map(review => [
                                    review.ID, // Cột ID (bị ẩn)
                                    review.ProductName,
                                    review.Username,
                                    review.Comment,
                                    new Date(review.CommentDate).toLocaleDateString(),
                                    review.Rating,
                                    review.Reply || "No reply",
                                    review.Status == 0 ? "Active" : "Deactive"
                                ])
                            }).render(document.getElementById("table-feedback"));
                        }
                    });

                                        document.body.addEventListener("click", function (e) {
                        let target = e.target.closest(".toggle-feedback-btn");
                        if (target) {
                            let feedbackId = target.getAttribute("data-feedbackid");
                            let currentStatus = target.getAttribute("data-status");

                            if (currentStatus === "Active") {
                                hideFeedback(feedbackId);
                            } else {
                                showFeedback(feedbackId);
                            }
                        }
                    });

                     function showFeedback(feedbackId) {
                        var token = $("input[name='__RequestVerificationToken']").val();
                        var id = feedbackId;

                        console.log("Debug - feedbackId:", feedbackId);

                        $.ajax({
                                    url: "/Seller/Show",
                                    method: "POST",
                                    dataType: "JSON",
                                    data: {
                                        id: feedbackId,
                                        __RequestVerificationToken: token
                                    },
                                    success: function (response) {
                                        if (response.success) {

                                            new Notify({
                                                status: 'success',
                                                title: 'Success!',
                                                text: response.msg || 'Send successfully!',
                                                effect: 'fade',
                                                speed: 300,
                                                showIcon: true,
                                                showCloseButton: true,
                                                autoclose: true,
                                                autotimeout: 3000,
                                                position: 'right top'
                                            });
                                                setTimeout(function () {
                                                window.location.reload();
                                                }, 1500);
                                        } else {
                                            new Notify({
                                                status: 'error',
                                                title: 'Failure',
                                                text: response.msg || 'Send failed!',
                                                effect: 'fade',
                                                speed: 300,
                                                showIcon: true,
                                                showCloseButton: true,
                                                autoclose: true,
                                                autotimeout: 3000,
                                                position: 'right top'
                                            });
                                        }
                                    },
                                    error: function () {
                                        new Notify({
                                            status: 'error',
                                            title: 'Failure',
                                            text: 'Send failed!',
                                            effect: 'fade',
                                            speed: 300,
                                            showIcon: true,
                                            showCloseButton: true,
                                            autoclose: true,
                                            autotimeout: 3000,
                                            position: 'right top'
                                        });
                                    }
                                });
                     
                    }


                    function hideFeedback(feedbackId) {
                       var token = $("input[name='__RequestVerificationToken']").val();
                        var id = feedbackId;

                        console.log("Debug - feedbackId:", feedbackId);

                        $.ajax({
                                    url: "/Seller/Hidden",
                                    method: "POST",
                                    dataType: "JSON",
                                    data: {
                                        id: feedbackId,
                                        __RequestVerificationToken: token
                                    },
                                    success: function (response) {
                                        if (response.success) {
                                            new Notify({
                                                status: 'success',
                                                title: 'Success!',
                                                text: response.msg || 'Send successfully!',
                                                effect: 'fade',
                                                speed: 300,
                                                showIcon: true,
                                                showCloseButton: true,
                                                autoclose: true,
                                                autotimeout: 3000,
                                                position: 'right top'
                                            });
                                                setTimeout(function () {
                                                window.location.reload();
                                                }, 1500);
                                        } else {
                                            new Notify({
                                                status: 'error',
                                                title: 'Failure',
                                                text: response.msg || 'Send failed!',
                                                effect: 'fade',
                                                speed: 300,
                                                showIcon: true,
                                                showCloseButton: true,
                                                autoclose: true,
                                                autotimeout: 3000,
