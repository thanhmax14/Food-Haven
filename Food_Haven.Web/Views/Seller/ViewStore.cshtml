<head>

    <meta charset="utf-8" />
    <title>Form layout | Velzon - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="EasyFood" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assetsAdmin/images/favicon.svg">
    <!-- Plugins css -->
    <link href="~/assetsAdmin/libs/dropzone/dropzone.css" rel="stylesheet" type="text/css" />
    <!-- Layout config Js -->
    <script src="~/assetsAdmin/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/assetsAdmin/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assetsAdmin/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assetsAdmin/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/assetsAdmin/css/custom.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <!-- Begin page -->
    <div id="layout-wrapper">

        @await Html.PartialAsync("_headeradmin")


        <!-- ========== App Menu ========== -->
        <div class="app-menu navbar-menu">
            <!-- LOGO -->
            <div class="navbar-brand-box">
                <!-- Dark Logo-->
                <a href="/" class="logo logo-dark">
                    <span class="logo-sm">
                        <img src="~/assetsAdmin/images/logo-sm.svg" alt="" height="22">
                    </span>
                    <span class="logo-lg">
                        <img src="~/assetsAdmin/images/logo-dark.svg" alt="" height="35">
                    </span>
                </a>
                <!-- Light Logo-->
                <a href="/" class="logo logo-light">
                    <span class="logo-sm">
                        <img src="~/assetsAdmin/images/logo-sm.svg" alt="" height="22">
                    </span>
                    <span class="logo-lg">
                        <img src="~/assetsAdmin/images/logo-light.svg" alt="" height="35">
                    </span>
                </a>
                <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover"
                    id="vertical-hover">
                    <i class="ri-record-circle-line"></i>
                </button>
            </div>

            <div id="scrollbar">
                <div class="container-fluid">
                    <div id="two-column-menu">
                    </div>
                    <ul class="navbar-nav" id="navbar-nav">
                        <li class="menu-title"><span data-key="t-menu">Menu</span></li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-controller="seller" asp-action="index">
                                <i class=" ri-pie-chart-line"></i> <span>Revenue Statistics</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-link active" asp-controller="seller" asp-action="ViewStore">
                                <i class="ri-store-2-line"></i> <span>Store</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-controller="seller" asp-action="ViewProductList">
                                <i class="ri-restaurant-2-fill"></i> <span>Products</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-controller="seller" asp-action="ManageOrder">
                                <i class="ri-file-copy-2-line"></i> <span>Sales History</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-controller="seller" asp-action="ManagerComplant">
                                <i class="ri-error-warning-line"></i> <span>Order Complaint</span>
                            </a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link menu-link" asp-controller="seller" asp-action="feedbacklist">
                            <i class="ri-question-answer-line"></i> <span>Feedback</span>
                        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-controller="seller" asp-action="ManagerVoucher">
                                <i class="ri-price-tag-3-line"></i> <span>Vouchers</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-controller="seller" asp-action="Chat">
                                <i class=" ri-chat-3-line"></i> <span>Chat</span>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
            <!-- Sidebar -->
        </div>
        <div class="sidebar-background"></div>
    </div>
    <!-- Left Sidebar End -->
    <!-- Vertical Overlay-->
    <div class="vertical-overlay"></div>

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div
                            class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                            <h4 class="mb-sm-0">Store Details</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                    <li class="breadcrumb-item active">Form Layout</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->
                @if (!ViewBag.HasStore)
                {
                    <div class="alert alert-info text-center">
                        <p>You do not have a store yet. Register now to start selling!</p>
                        <a href="/Seller/CreateStore" class="btn btn-success">Register Store</a>
                    </div>
                }
                else
                {
                    <div class="col-xxl-12">
                        <div class="card">
                            <div class="card-header align-items-center d-flex">
                                <h4 class="card-title mb-0 flex-grow-1">Store Information</h4>
                            </div>

                            <div class="card-body">
                                <div class="live-preview">
                                    @{
                                        string storeStatus = ViewBag.StoreStatus;
                                        bool isActive = ViewBag.IsActive;
                                    }

                                    @if (storeStatus == "PENDING")
                                    {
                                        <div class="alert alert-warning text-center">
                                            <p>Thank you for registering. Your store is awaiting admin approval!</p>
                                        </div>
                                    }
                                    else if (storeStatus == "REJECTED")
{
    <div class="alert alert-danger text-center">
        <p>Your store registration has been rejected.</p>
        <a asp-action="ReRegisterStore" class="btn btn-warning mt-2">Register Store Again</a>
    </div>
}

                                    else if (storeStatus == "APPROVED")
                                    {
                                        if (!isActive)
                                        {
                                            <div class="alert alert-danger text-center">
                                                <p><strong>Your store has been locked due to a policy violation!</strong></p>
                                                <p>Please contact support for further assistance.</p>
                                            </div>
                                        }

                                        <div class="border rounded p-3 mb-3">
                                            <form method="post" asp-page-handler="Update">
                                                <input type="hidden" name="ID" value="@Model.ID" />

                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="mb-3">
                                                            <label class="form-label">Store Name</label>
                                                            <input type="text" class="form-control" value="@Model.Name"
                                                                readonly />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="mb-3">
                                                            <label class="form-label">Created Date</label>
                                                            <input type="text" class="form-control"
                                                                value="@Model.CreatedDate.ToString("dd-MM-yyyy")" readonly />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="mb-3">
                                                            <label class="form-label">Modified Date</label>
                                                            <input type="text" class="form-control"
                                                                value="@Model.ModifiedDate?.ToString("dd-MM-yyyy")" readonly />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12">
                                                        <div class="mb-3">
                                                            <label class="form-label">Short Description</label>
                                                            <input type="text" class="form-control"
                                                                value="@Model.ShortDescriptions" readonly />
                                                        </div>
                                                    </div>

                                                    <style>
                                                        .description-box {
                                                            border: 1px solid #ced4da;
                                                            border-radius: 5px;
                                                            padding: 8px;
                                                            min-height: 40px;
                                                            display: block;
                                                            width: 100%;
                                                            /* Đảm bảo rộng bằng input */
                                                            box-sizing: border-box;
                                                            /* Giúp padding không làm thay đổi kích thước */
                                                        }
                                                    </style>

                                                    <div class="col-md-12">
                                                        <div class="mb-3">
                                                            <label class="form-label">Long Description</label>
                                                            <div class="description-box">
                                                                @Html.Raw(@Model.LongDescriptions)
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="mb-3">
                                                            <label class="form-label">Address</label>
                                                            <input type="text" class="form-control" value="@Model.Address"
                                                                readonly />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="mb-3">
                                                            <label class="form-label">Phone Number</label>
                                                            <input type="text" class="form-control" value="@Model.Phone"
                                                                readonly />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="mb-3">
                                                            <label class="form-label">Image</label>
                                                            <div>
                                                                @if (!string.IsNullOrEmpty(Model.Img))
                                                                {
                                                                    <img src="@Model.Img" alt="Store Image"
                                                                        class="img-fluid rounded" style="max-height: 200px;" />
                                                                }
                                                                else
                                                                {
                                                                    <p class="text-muted">No image available</p>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>

                                                    @if (isActive)
                                                    {
                                                        <div class="col-lg-12 text-end">
                                                            <a asp-action="UpdateStore" asp-route-id="@Model.ID"
                                                                class="btn btn-sm btn-primary">Update</a>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col-lg-12 text-end">
                                                            <a asp-action="UpdateStore" asp-route-id="@Model.ID"
                                                                class="btn btn-primary disabled" tabindex="-1"
                                                                aria-disabled="true">Update</a>
                                                        </div>
                                                    }
                                                </div>
                                            </form>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }


                @await Html.PartialAsync("_Footer_Admin_Seller")
            </div>
            <!-- end main content-->
            <!-- END layout-wrapper -->
            <!--start back-to-top-->
            <button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
                <i class="ri-arrow-up-line"></i>
            </button>
            <!--end back-to-top-->
            <!--preloader-->
            <div id="preloader">
                <div id="status">
                    <div class="spinner-border text-primary avatar-sm" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>



            <!-- JAVASCRIPT -->
            <script src="~/assetsAdmin/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="~/assetsAdmin/libs/simplebar/simplebar.min.js"></script>
            <script src="~/assetsAdmin/libs/node-waves/waves.min.js"></script>
            <script src="~/assetsAdmin/libs/feather-icons/feather.min.js"></script>
            <script src="~/assetsAdmin/js/pages/plugins/lord-icon-2.1.0.js"></script>
            <script src="~/assetsAdmin/js/plugins.js"></script>
            <!-- ckeditor -->
            <script src="~/assetsAdmin/libs/%40ckeditor/ckeditor5-build-classic/build/ckeditor.js"></script>

            <!-- dropzone js -->
            <script src="~/assetsAdmin/libs/dropzone/dropzone-min.js"></script>

            <script src="~/assetsAdmin/js/pages/ecommerce-product-create.init.js"></script>

            <!-- prismjs plugin -->
            <script src="~/assetsAdmin/libs/prismjs/prism.js"></script>

            <script src="~/assetsAdmin/js/app.js"></script>

</body>


