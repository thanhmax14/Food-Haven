                            // ========== RENDER IMAGE PREVIEWS ==========
                            function renderGalleryPreviews() {
                                galleryList.querySelectorAll('li[data-type="new"]').forEach(li => li.remove());

                                Array.from(dt.files).forEach((file, index) => {
                                    const reader = new FileReader();
                                    reader.onload = function (e) {
                                        const li = document.createElement('li');
                                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                                        li.setAttribute('data-type', 'new');
                                        li.innerHTML = `
                        <div class="d-flex align-items-center" style="gap: 10px;">
                            <img src="${e.target.result}" style="width: 40px; height: 40px; object-fit: cover;" class="rounded">
                            <div>
                                <div>${file.name}</div>
                                <div class="text-muted small">${(file.size / 1024).toFixed(1)} KB</div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-danger btn-sm">Delete</button>
                    `;
                                        li.querySelector('button').addEventListener('click', function () {
                                            const newDt = new DataTransfer();
                                            Array.from(dt.files).forEach((f, i) => {
                                                if (i !== index) newDt.items.add(f);
                                            });
                                            dt = newDt;
                                            galleryInput.files = dt.files;
                                            renderGalleryPreviews();
                                        });
                                        galleryList.appendChild(li);
                                    };
                                    reader.readAsDataURL(file);
                                });
                            }

                        // ========== EXISTING GALLERY IMAGES FROM DB ==========
                        const existingGalleryContainer = document.getElementById('existingGalleryImages');
                        if (existingGalleryContainer) {
                            const galleryImages = existingGalleryContainer.querySelectorAll('.existing-gallery-img');
                            galleryImages.forEach(img => {
                                const li = document.createElement('li');
                                li.className = 'list-group-item d-flex justify-content-between align-items-center';
                                li.innerHTML = `
                    <div class="d-flex align-items-center" style="gap: 10px;">
                        <img src="${img.dataset.url}" style="width: 40px; height: 40px; object-fit: cover;" class="rounded">
                        <div>
                            <div>${img.dataset.name}</div>
                            <div class="text-muted small">Existing image</div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-danger btn-sm" onclick="markToRemove(this, '${img.dataset.url}')">Delete</button>
                `;
                                galleryList.appendChild(li);
                            });
                        }

                        // ========== MARK EXISTING IMAGE FOR DELETE ==========
                        window.markToRemove = function (button, imageUrl) {
                            const li = button.closest('li');
                            li.remove();

                            const input = document.createElement("input");
                            input.type = "hidden";
                            input.name = "RemoveImageUrls";
                            input.value = imageUrl;
                            removedImagesContainer.appendChild(input);
                        };

                        // ========== VALIDATION ON FORM SUBMIT ==========
                        const form = document.querySelector('form[method="post"]');
                        form.addEventListener('submit', function (e) {
                            const removedCount = removedImagesContainer.querySelectorAll('input[name="RemoveImageUrls"]').length;
                            const existingCount = parseInt(existingGalleryCountInput.value) || 0;
                            const addedCount = galleryInput.files.length;

                            const finalGalleryCount = (existingCount - removedCount) + addedCount;

                            if (finalGalleryCount < 1) {
                                e.preventDefault();
                                Swal.fire({ icon: 'error', title: 'Need More Images', text: 'At least one gallery image is required!' });
                                return;
                            }

                            if (finalGalleryCount > 4) {
                                e.preventDefault();
                                Swal.fire({ icon: 'error', title: 'Too Many Images', text: 'Only 4 gallery images are allowed.' });
                            }
                        });
                    });
                </script>

