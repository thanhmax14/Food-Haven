                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        const mainInput = document.getElementById('product-image-input');
                        const mainPreview = document.getElementById('product-img');
                        const removedImagesContainer = document.getElementById('removedImagesContainer');
                        const existingGalleryCountInput = document.getElementById('existingGalleryCount');
                        const galleryInput = document.getElementById('galleryImageInput');
                        const galleryList = document.getElementById('galleryPreviewList');

                        // Dùng để quản lý file mới chọn
                        let dt = new DataTransfer();

                        // ========== MAIN IMAGE PREVIEW ==========
                        if (mainInput && mainPreview) {
                            mainInput.addEventListener('change', function (e) {
                                const file = e.target.files[0];
                                if (file) {
                                    const reader = new FileReader();
                                    reader.onload = e => mainPreview.src = e.target.result;
                                    reader.readAsDataURL(file);
                                } else {
                                    mainPreview.src = "/images/placeholder-image.png";
                                }
                            });
                        }

                        // ========== GALLERY IMAGE SELECTION ==========
                        galleryInput.addEventListener('change', function () {
                            const newFiles = Array.from(galleryInput.files);
                            const removedCount = removedImagesContainer.querySelectorAll('input[name="RemoveImageUrls"]').length;
                            const existingCount = parseInt(existingGalleryCountInput.value) || 0;

                            const currentFilesCount = dt.files.length;
                            const totalIfAdded = (existingCount - removedCount) + currentFilesCount + newFiles.length;

                            // Nếu vượt quá giới hạn
                            if (totalIfAdded > 4) {
                                const allowedToAdd = 4 - (existingCount - removedCount + currentFilesCount);

                                if (allowedToAdd > 0) {
                                    // Chỉ thêm số ảnh còn thiếu
                                    newFiles.slice(0, allowedToAdd).forEach(file => dt.items.add(file));

                                    Swal.fire({
                                        icon: 'warning',
                                        title: 'Only 4 images can be added.',
                                        text: 'Only 4 gallery images allowed.'
                                    });
                                } else {
                                    // Không thêm ảnh nào vì đã đủ
                                    Swal.fire({
                                        icon: 'warning',
                                        title: 'Only 4 images can be added.',
                                        text: 'Only 4 gallery images allowed.'
                                    });
                                }

                                // Reset input để có thể chọn lại
                                galleryInput.value = '';
                                galleryInput.files = dt.files;
                                renderGalleryPreviews();
                                return;
                            }

                            // Nếu không vượt quá giới hạn → thêm tất cả
                            newFiles.forEach(file => dt.items.add(file));
                            galleryInput.value = '';
                            galleryInput.files = dt.files;

                            renderGalleryPreviews();
                        });

                        @* galleryInput.addEventListener('change', function () {
                            const files = Array.from(galleryInput.files);
                            const removedCount = removedImagesContainer.querySelectorAll('input[name="RemoveImageUrls"]').length;
                            const existingCount = parseInt(existingGalleryCountInput.value) || 0;

                            const totalIfAdded = (existingCount - removedCount) + dt.files.length + files.length;

                            if (totalIfAdded > 4) {
                                Swal.fire({ icon: 'warning', title: 'Image limit exceeded!', text: 'Only 4 gallery images allowed.' });
                                galleryInput.value = '';
                                return;
                            }

                            files.forEach(file => dt.items.add(file));
                            galleryInput.files = dt.files;

                            renderGalleryPreviews();
