    <div class="vertical-overlay"></div>

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div
                            class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                            <h4 class="mb-sm-0">Update Product</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="/seller/ViewProductList">Product List</a></li>
                                    <li class="breadcrumb-item active">Update Product</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->
                @if (storeStatusText == "Rejected")
                {
                    <div class="alert alert-danger text-center">
                        <p><strong>Your store has been rejected by admin!</strong></p>
                        <p>Please update your store information and register store again.</p>
                    </div>
                }
                else if (storeStatusText == "Pending")
                {
                    <div class="alert alert-warning text-center">
                        <p><strong>Your store is currently pending approval.</strong></p>
                        <p>Please wait while we review your request.</p>
                    </div>
                }
                else if (storeStatusText == "Approved")
                {
                    @if (ViewBag.IsStoreActive == false)
                    {
                        <div class="alert alert-danger text-center">
                            <p><strong>Your store has been locked due to a policy violation!</strong></p>
                            <p>Please contact support for further assistance.</p>
                        </div>
                    }
                    else
                    {
                        <!-- Update Product Form -->
                        <div class="row">
                            <div class="col-xxl-12">
                                <div class="card">
                                    <div class="card-header align-items-center d-flex">
                                        <h4 class="card-title mb-0 flex-grow-1">Update Your Product</h4>
                                    </div>
                                    <div class="card-body">
                                        <form method="post" asp-action="UpdateProduct" enctype="multipart/form-data">
                                            <input type="hidden" asp-for="ProductID" />
                                            <input type="hidden" asp-for="StoreID" />

                                            <div class="row">
                                                <!-- Product Name -->
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="Name" class="form-label">Product Name</label>
                                                    <input asp-for="Name" class="form-control" required />
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>

                                                <!-- Manufacture Date -->
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="ManufactureDate" class="form-label">Manufacture Date</label>
                                                    <input asp-for="ManufactureDate" type="date" class="form-control"
                                                        required />
                                                </div>

                                                <!-- Short Description -->
                                                <div class="col-md-12 mb-3">
                                                    <label asp-for="ShortDescription" class="form-label">Short
                                                        Description</label>
                                                    <input asp-for="ShortDescription" class="form-control" required />
                                                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                                </div>

                                                <!-- Long Description -->
                                                <div class="col-md-12 mb-3">
                                                    <label asp-for="LongDescription" class="form-label">Detailed
                                                        Description</label>
                                                    <textarea asp-for="LongDescription" class="form-control" rows="4"
                                                        id="ckeditor-classic" required></textarea>
                                                    <span asp-validation-for="LongDescription" class="text-danger"></span>
                                                </div>

                                                <!-- Category -->
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="CateID" class="form-label">Category</label>
                                                    <select asp-for="CateID" asp-items="Model.Categories" class="form-control"
                                                        required>
                                                        <option value="">-- Select Category --</option>
                                                    </select>
                                                    <span asp-validation-for="CateID" class="text-danger"></span>
                                                </div>

                                                <!-- Status -->
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Product Status</label>
                                                    <div class="form-check">
                                                        <input class="form-check-input" asp-for="IsOnSale" type="checkbox" />
                                                        <label class="form-check-label" asp-for="IsOnSale">On Sale</label>
                                                    </div>
                                                </div>

                                                <!-- Main Image -->
                                                <div class="mb-4">
                                                    <h5 class="fs-14 mb-1">Product Image</h5>
                                                    <p class="text-muted">Add Product main Image.</p>
                                                    <div class="text-center">
                                                        <div class="position-relative d-inline-block">
                                                            <div class="position-absolute top-100 start-100 translate-middle">
                                                                <label for="product-image-input" class="mb-0">
                                                                    <div class="avatar-xs">
                                                                        <div
                                                                            class="avatar-title bg-light border rounded-circle text-muted cursor-pointer">
                                                                            <i class="ri-image-fill"></i>
                                                                        </div>
                                                                    </div>
                                                                </label>
                                                                <input asp-for="MainImage" id="product-image-input" type="file"
                                                                    class="form-control d-none" accept="image/*">
                                                            </div>
                                                            <div class="avatar-lg">
                                                                <div class="avatar-title bg-light rounded">
                                                                    <img src="@Model.ExistingMainImage" id="product-img"
                                                                        class="avatar-md h-auto" style="object-fit: cover;" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Gallery Images Input Section -->
                                                <div class="mb-4">
                                                    <label class="form-label">Product Gallery</label>
                                                    <p class="text-muted">Add up to 4 gallery images.</p>
                                                    <input asp-for="GalleryImages" id="galleryImageInput" type="file"
                                                        class="form-control" accept="image/*" multiple />
                                                    <ul class="list-group mt-3" id="galleryPreviewList"></ul>
                                                    <div id="removedImagesContainer"></div>

                                                    <div id="existingGalleryImages" class="d-none">
                                                        @foreach (var img in galleryImages)
                                                        {
                                                            <img class="existing-gallery-img" data-url="@img"
                                                                data-name="@System.IO.Path.GetFileName(img)" />
                                                        }
                                                    </div>
                                                    <input type="hidden" id="existingGalleryCount"
                                                        value="@galleryImages.Count" />
                                                </div>

                                                <!-- Submit Button -->
                                                <div class="col-lg-12 text-end">
                                                    <a href="/Seller/ViewProductList?storeid=@Model.StoreID"
                                                        class="btn btn-sm btn-secondary px-3">Back To Products</a>
                                                    <button type="submit" id="submitBtn" class="btn btn-sm btn-primary px-3"><i
                                                            class="ri-pencil-fill align-bottom me-1"></i> Update
                                                        Product</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }





                <style>
                    .existing-image {
                        max-width: 100px;
                        max-height: 100px;
                        border-radius: 5px;
                        transition: transform 0.2s ease-in-out;
                    }

                    .existing-image:hover {
                        transform: scale(1.1);
                    }

                    .remove-checkbox {
                        position: absolute;
                        top: 5px;
                        right: 5px;
                    }

                    .remove-label {
                        font-size: 12px;
                        color: red;
                        position: absolute;
                        top: 25px;
                        right: 5px;
                        cursor: pointer;
                    }
                </style>

                <script>
                    @if (ViewBag.UpdateSuccess != null && (bool)ViewBag.UpdateSuccess)
                        {
                            <text>
                                Swal.fire({
                                    icon: 'success',
                                title: 'Product Updated!',
                                text: 'Your product has been successfully updated.',
                                timer: 2000,
                                showConfirmButton: false
                                                                                                });
                            </text>
                    }
                </script>

                <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            const mainInput = document.getElementById('product-image-input');
                            const mainPreview = document.getElementById('product-img');
                            const removedImagesContainer = document.getElementById('removedImagesContainer');
                            const existingGalleryCountInput = document.getElementById('existingGalleryCount');

                            let selectedGalleryFiles = [];
                            let galleryInput = document.getElementById('galleryImageInput');
                            const galleryList = document.getElementById('galleryPreviewList');

                            function updateGalleryInputState() {
                                const removedCount = removedImagesContainer.querySelectorAll('input[name="RemoveImageUrls"]').length;
                                const existingCount = parseInt(existingGalleryCountInput.value) || 0;
                                const totalImages = (existingCount - removedCount) + selectedGalleryFiles.length;
                                if (totalImages > 4) {
                                    Swal.fire({
                                        icon: 'warning',
                                        title: 'Image limit exceeded!',
                                        text: 'You can only select up to 4 gallery images.'
                                    });
                                }
                            }

                            if (mainInput && mainPreview) {
                                mainInput.addEventListener('change', function (e) {
                                    const file = e.target.files[0];
                                    if (file) {
                                        const reader = new FileReader();
                                        reader.onload = e => mainPreview.src = e.target.result;
                                        reader.readAsDataURL(file);
                                    } else {
                                        mainPreview.src = "/images/placeholder-image.png";
                                    }
                                });
                            }

                            galleryInput.addEventListener('change', function (e) {
                                const files = Array.from(e.target.files);
                                const removedCount = removedImagesContainer.querySelectorAll('input[name="RemoveImageUrls"]').length;
                                const existingCount = parseInt(existingGalleryCountInput.value) || 0;
                                const totalIfAdded = (existingCount - removedCount) + selectedGalleryFiles.length + files.length;

                                if (totalIfAdded > 4) {
                                    Swal.fire({ icon: 'warning', title: 'Image limit exceeded!', text: 'Only 4 gallery images allowed.' });
                                    galleryInput.value = '';
                                    return;
                                }

                                selectedGalleryFiles = selectedGalleryFiles.concat(files);
                                renderGalleryPreviews();
                                updateGalleryInputState();
                            });

                            function renderGalleryPreviews() {
                                galleryList.querySelectorAll('li[data-type="new"]').forEach(li => li.remove());

                                selectedGalleryFiles.forEach((file, index) => {
                                    const reader = new FileReader();
                                    reader.onload = function (e) {
                                        const li = document.createElement('li');
                                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                                        li.setAttribute('data-type', 'new');
                                        li.innerHTML = `
                                        <div class="d-flex align-items-center" style="gap: 10px;">
                                            <img src="${e.target.result}" style="width: 40px; height: 40px; object-fit: cover;" class="rounded">
                                            <div>
                                                <div>${file.name}</div>
                                                <div class="text-muted small">${(file.size / 1024).toFixed(1)} KB</div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                    `;
                                        li.querySelector('button').addEventListener('click', function () {
                                            selectedGalleryFiles.splice(index, 1);
                                            renderGalleryPreviews();
                                            updateGalleryInputState();
                                        });
                                        galleryList.appendChild(li);
                                    };
                                    reader.readAsDataURL(file);
                                });
                            }

                            const existingGalleryContainer = document.getElementById('existingGalleryImages');
                            if (existingGalleryContainer) {
                                const galleryImages = existingGalleryContainer.querySelectorAll('.existing-gallery-img');
                                galleryImages.forEach(img => {
                                    const li = document.createElement('li');
                                    li.className = 'list-group-item d-flex justify-content-between align-items-center';
                                    li.innerHTML = `
                                    <div class="d-flex align-items-center" style="gap: 10px;">
                                        <img src="${img.dataset.url}" style="width: 40px; height: 40px; object-fit: cover;" class="rounded">
                                        <div>
                                            <div>${img.dataset.name}</div>
                                            <div class="text-muted small">Existing image</div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="markToRemove(this, '${img.dataset.url}')">Delete</button>
                                `;
                                    galleryList.appendChild(li);
                                });
                            }

                            window.markToRemove = function (button, imageUrl) {
                                const li = button.closest('li');
                                li.remove();

                                const input = document.createElement("input");
                                input.type = "hidden";
                                input.name = "RemoveImageUrls";
                                input.value = imageUrl;
                                removedImagesContainer.appendChild(input);
                                updateGalleryInputState();
                            };

                            updateGalleryInputState();
                        });
                </script>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        const form = document.querySelector('form[method="post"]');
                        const mainInput = document.getElementById('product-image-input');
                        const mainPreview = document.getElementById('product-img');
                        const existingGalleryCountInput = document.getElementById('existingGalleryCount');
                        const removedImagesContainer = document.getElementById('removedImagesContainer');
                        const galleryInput = document.getElementById('galleryImageInput');

                        form.addEventListener('submit', function (e) {
                            const hasMainImage = mainInput.files.length > 0 || (mainPreview && mainPreview.src && !mainPreview.src.includes("placeholder"));
                            if (!hasMainImage) {
                                e.preventDefault();
                                Swal.fire({ icon: 'error', title: 'Missing Main Image', text: 'Please select a main product image!' });
                                return;
                            }

                            const removedCount = removedImagesContainer.querySelectorAll('input[name="RemoveImageUrls"]').length;
                            const existingCount = parseInt(existingGalleryCountInput.value) || 0;
                            const addedCount = galleryInput.files.length;

                            const finalGalleryCount = (existingCount - removedCount) + addedCount;

                            if (finalGalleryCount < 1) {
                                e.preventDefault();
                                Swal.fire({ icon: 'error', title: 'Need More Images', text: 'At least one gallery image is required!' });
                                return;
                            }

                            if (finalGalleryCount > 4) {
                                e.preventDefault();
                                Swal.fire({ icon: 'error', title: 'Too Many Images', text: 'Only 4 gallery images are allowed.' });
                            }
                        });
                    });
                </script>

                @await Html.PartialAsync("_Footer_Admin_Seller")
            </div>
            <!-- end main content-->
            <!-- END layout-wrapper -->
