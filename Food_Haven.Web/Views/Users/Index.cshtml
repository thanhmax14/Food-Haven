                        { name: "After", width: "110px", formatter: (e) => gridjs.html(`<p>${e}</p>`) },
                        { name: "Type", width: "110px", formatter: (e) => gridjs.html(`<p>${e}</p>`) },
                        {
                            name: "Status",
