                                            <span asp-validation-for="ShortDescriptions" class="text-danger"></span>
                                        </div>

                                    </div>

                                    @* <div class="col-md-6">
                        <div class="mb-3">
                            <label for="emailidInput" class="form-label">Recipes Made It
                                Count</label>
                            <input type="email" class="form-control" placeholder="Enter number" id="emailidInput"
