    <script>
        $(document).on('click', '.remove-favorite', function () {
            const id = $(this).data('id');
            console.log("ID to be sent:", id); // ✅ Debug

            if (!id) {
                console.error("ID is missing.");
                return;
            }

            Swal.fire({
                title: "Confirm Deletion?",
                text: "Are you sure you want to remove this item from your favorites?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                confirmButtonText: "Delete",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Users/DeleteFavoriteRecipe',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(id),
                        success: function (res) {
                            if (res.success) {
                                Swal.fire("Deleted!", res.message, "success");
                                $('#article-' + id).remove(); // ✅ đúng ID
                            } else {
                                Swal.fire("Error", res.message, "error");
                            }
                        },
                        error: function () {
                            Swal.fire("Error", "Failed to remove from favorites.", "error");
                        }
                    });
                }
            });
        });
    </script>

