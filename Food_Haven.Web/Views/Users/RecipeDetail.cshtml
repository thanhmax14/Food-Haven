<script>
document.getElementById('Relycomment-form').addEventListener('submit', function (e) {
    e.preventDefault();

    const id = document.getElementById('parent-comment-id').value;
    const reply = document.getElementById('reply-text').value;
    const recipeId = document.getElementById('recipe-id').value;
    const isEdit = replyForm.getAttribute('data-edit') === 'true';

    fetch('/Users/RelyComment', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
        },
        body: JSON.stringify({
            ID: id,
            Reply: reply,
            RecipeID: recipeId,
            IsEdit: isEdit
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            new Notify({
                status: 'success',
                title: 'Success!',
                text: data.message || 'Reply saved successfully.',
                position: 'right top',
                autoclose: true,
                autotimeout: 3000,
                showIcon: true
            });

            const parentCommentElement = document.querySelector(`[data-comment-id="${id}"]`).closest('.single-comment');
            const timestamp = new Date().toLocaleString();

          const replyHTML = `
    <div class="reply-box ml-60 mt-2 p-2 bg-light rounded border">
        <p>
            <strong>${data.username}</strong>
            <span class="badge-owner ms-1">
                <i class="bi bi-patch-check-fill text-primary me-1"></i> Owner
            </span>
        </p>
        <p class="reply-content">${reply}</p>
        <span class="font-xs text-muted">${timestamp}</span>
        <a href="#" class="edit-reply" data-comment-id="${id}" data-reply="${reply}">Edit</a>
    </div>
`;


            if (isEdit) {
                // Nếu đang edit → thay thế toàn bộ khối reply-box
                const oldReplyBox = parentCommentElement.querySelector('.reply-box');
                if (oldReplyBox) {
                    oldReplyBox.outerHTML = replyHTML;
                }
            } else {
                // Nếu là reply mới → thêm mới vào cuối khối comment
                parentCommentElement.querySelector('.desc').insertAdjacentHTML('beforeend', replyHTML);
            }

            // Reset & đóng form
            this.reset();
            replyForm.removeAttribute('data-edit');
            replyForm.style.display = 'none';
            currentReplyTarget = null;
        } else {
            new Notify({
                status: 'error',
                title: 'Failed!',
                text: data.message || 'Failed to send reply.',
                position: 'right top',
                autoclose: true,
                autotimeout: 4000,
                showIcon: true
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        new Notify({
            status: 'error',
            title: 'Error!',
            text: 'Connection error.',
            position: 'right top',
            autoclose: true,
            autotimeout: 4000,
            showIcon: true
        });
    });
});
</script>
<script>
   $(document).on('click', '.add-favorite', function () {
    const recipeId = $(this).data('recipe-id');
    const button = $(this);

    // Nếu đã yêu thích → xác nhận bằng SweetAlert2
    if (button.hasClass('heart-red')) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'Do you want to remove this recipe from your favorites?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, remove it',
            cancelButtonText: 'Cancel',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                toggleFavorite(recipeId, button);
            }
        });
    } else {
        // Nếu chưa yêu thích thì gọi luôn
        toggleFavorite(recipeId, button);
    }
});

// Gọi API và xử lý
function toggleFavorite(recipeId, button) {
    $.ajax({
        url: '/Users/AddFavoriteRecipes',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ RecipeID: recipeId }),
        success: function (res) {
            if (res.success) {
                if (res.isFavorite) {
                    button.addClass('heart-red');

                    new Notify({
                        status: 'success',
                        title: 'Added to Favorites',
                        text: res.message || 'The recipe has been added to your favorites.',
                        position: 'right top',
                        autoclose: true,
                        autotimeout: 2000,
                        showIcon: true
                    });

                } else {
                    button.removeClass('heart-red');

                  new Notify({
    status: 'success',
    title: 'Removed from Favorites',
    text: res.message || 'The recipe has been removed from your favorites.',
    position: 'right top',
    autoclose: true,
    autotimeout: 2000,
    showIcon: true
});

                }
            } else {
                new Notify({
                    status: 'error',
                    title: 'Error',
                    text: res.message || 'An error occurred while processing your request.',
                    position: 'right top',
                    autoclose: true,
                    autotimeout: 4000,
                    showIcon: true
                });
            }
        },
        error: function () {
            new Notify({
                status: 'error',
                title: 'Connection Failed',
                text: 'Unable to connect to the server. Please try again.',
                position: 'right top',
                autoclose: true,
                autotimeout: 4000,
                showIcon: true
            });
        }
    });
}


