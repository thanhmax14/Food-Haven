<script>
    const replyForm = document.getElementById('reply-form');
    let currentReplyTarget = null; // lưu vị trí comment đang mở reply

    document.querySelector('.comments-area').addEventListener('click', function (e) {
        if (e.target.classList.contains('reply') || e.target.classList.contains('edit-reply')) {
            e.preventDefault();

            const commentId = e.target.getAttribute('data-comment-id');
            const parentComment = e.target.closest('.single-comment');

            // Nếu đang mở form tại chính comment này → toggle ẩn
            if (currentReplyTarget === parentComment) {
                replyForm.style.display = 'none';
                replyForm.removeAttribute('data-edit');
                document.querySelector('.comments-area').appendChild(replyForm);
                currentReplyTarget = null;
                return; // Thoát không mở lại form
            }

            // Gán ID vào hidden input
            document.getElementById('parent-comment-id').value = commentId;

            if (e.target.classList.contains('edit-reply')) {
                const replyContent = e.target.getAttribute('data-reply');
                document.getElementById('reply-text').value = replyContent;
                replyForm.setAttribute('data-edit', 'true');
            } else {
                document.getElementById('reply-text').value = '';
                replyForm.removeAttribute('data-edit');
            }

            parentComment.after(replyForm);
            replyForm.style.display = 'block';
            currentReplyTarget = parentComment;
        }
    });

    // Cancel reply
    document.getElementById('cancel-reply').addEventListener('click', function () {
        replyForm.style.display = 'none';
        replyForm.removeAttribute('data-edit');
        document.querySelector('.comments-area').appendChild(replyForm);
        currentReplyTarget = null;
    });
</script>



