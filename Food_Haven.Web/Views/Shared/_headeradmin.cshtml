@using Microsoft.AspNetCore.Identity
@using Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
    string role = "";
    string avatar = "/assetsAdmin/images/users/default-avatar.jpg"; // fallback
    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        role = (await UserManager.GetRolesAsync(currentUser)).FirstOrDefault() ?? "User";

        if (!string.IsNullOrEmpty(currentUser.ImageUrl))
        {
            avatar = currentUser.ImageUrl; // giả sử AvatarPath là trường chứa URL ảnh
        }
    }
}


