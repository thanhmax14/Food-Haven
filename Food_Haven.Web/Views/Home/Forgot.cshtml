<script type="text/javascript">

    $("#btnForgotPassword").on("submit", function (e) {
        e.preventDefault(); // Chặn hành động submit mặc định

        var checkbox = document.getElementById("isCheckbox");
        var token = $("input[name='__RequestVerificationToken']").val();
        var email = $("#email").val();

        if (!checkbox.checked) {
            Swal.fire(
                'Failed',
                "Please agree to the terms and policies to continue",
                'error'
            );
            return;
        }


        $('#btnForgotPassword button[type="submit"]').html('<i class="fa fa-spinner fa-spin"></i> Processing...').prop('disabled', true);

        $.ajax({
            url: "@Url.Action("Forgot", "Home")",
            method: "POST",
            dataType: "JSON",
            data: {
                email: email,
                __RequestVerificationToken: token
            },
            success: function (response) {
                if (response.status == 'success') {
                    Swal.fire({
                        title: 'Successful!',
                        text: response.msg,
                        icon: 'success',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'OK',
                        allowOutsideClick: false, // Không cho click ra ngoài
                        allowEscapeKey: false,    // Không cho bấm Esc
                        allowEnterKey: false      // Không cho bấm Enter
                    }).then((result) => {
                        if (result.isConfirmed) {
                            location.href = '/Home/login';
                        }
                    });

                } else if (response.status == 'verify') {
                    cuteToast({
                        type: "warning",
                        message: response.msg,
                        timer: 5000
                    });
                    setTimeout(() => location.href = response.url, 1000);
                } else {
                    Swal.fire('Failure!', response.msg, 'error');
                }

                $('#btnForgotPassword button[type="submit"]').html('Reset password').prop('disabled', false);
            },
            error: function () {
                cuteToast({
                    type: "error",
                    message: 'Cannot process',
                    timer: 5000
                });


                $('#btnForgotPassword button[type="submit"]').html('Reset password').prop('disabled', false);
            }
        });
    });

</script>