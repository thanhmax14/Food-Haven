<script type="text/javascript">
    $("#btnLogin").on("click", function () {
        $('#btnLogin').html('<i class="fa fa-spinner fa-spin"></i> Processing...').prop('disabled', true);
        var username = $("#username").val();
        var password = $("#password").val();
        var ReturnUrl = $("#ReturnUrl").val();
        var rememberMe = $("#remembers_me").is(":checked");
        var token = $("input[name='__RequestVerificationToken']").val();
        $.ajax({
            url: '@Url.Action("Login", "Home")',
            method: "POST",
            dataType: "JSON",
            data: {
                username: username,
                password: password,
                ReturnUrl: ReturnUrl,
                rememberMe: rememberMe,
                __RequestVerificationToken: token
            },
            success: function (response) {
                if (response.status == 'success') {
                    cuteToast({
                        type: "success",
                        message: response.msg,
                        timer: 5000
                    });
                    setTimeout("location.href = '" + response.redirectUrl + "';", 100);
                } else if (response.status == 'verify') {
                    Swal.fire({
                        title: "Enter two-step verification code",
                        input: "text",
                        inputAttributes: {
                            autocapitalize: "off"
                        },
                        showCancelButton: true,
                        confirmButtonText: "Confirm",
                        showLoaderOnConfirm: true,
                        preConfirm: async (otp) => {
                            if (!otp) {
                                Swal.showValidationMessage("Please enter the verification code.");
                            }
                            return otp;
                        },
                        allowOutsideClick: () => !Swal.isLoading()
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            var otp = result.value;

                            $.ajax({
                                url: '@Url.Action("VerifyTwoFactor", "Home")',
                                method: "POST",
                                dataType: "JSON",
                                data: {
                                    username: username,
                                    otp: otp,
                                    __RequestVerificationToken: token,
                                    ReturnUrl: ReturnUrl,

                                },
                                success: function (response) {
                                    if (response.status == 'success') {
                                        cuteToast({
                                            type: "success",
                                            message: response.msg,
                                            timer: 5000
                                        });
                                        setTimeout("location.href = '" + response.redirectUrl + "';", 100);
                                    } else {
                                        Swal.fire(
                                            'Failed',
                                            response.msg,
                                            'error'
                                        );

                                    }
                                },
                                error: function () {
                                    cuteToast({
                                        type: "error",
                                        message: 'Cannot process',
                                        timer: 5000
                                    });

                                }
                            });
                        }
                    });
                } else if (response.status == 'notcomfirm') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Account Not Verified',
                        text: "Your account has not been verified yet. Please check your email to confirm your registration.",
                        footer: '<a href="#" onclick="resendVerificationEmail()" style="text-decoration: underline;">Click here to resend the verification email</a>',
                    }).then((result) => {

                    });
                } else {
                    Swal.fire(
                        'Failed',
                        response.msg,
                        'error'
                    );

                }
                $('#btnLogin').html('Login').prop('disabled', false);
            },
            error: function () {
                cuteToast({
                    type: "error",
                    message: 'Cannot process',
                    timer: 5000
                });

                $('#btnLogin').html('Login').prop('disabled', false);
            }
        });
    });

    function resendVerificationEmail() {
        var username = $("#username").val();
        var token = $("input[name='__RequestVerificationToken']").val();

        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to resend the verification email?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Yes',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {
                let timerInterval;
                Swal.fire({
                    title: "Sending Email...",
                    html: "Please wait, we are resending the email. <b></b> seconds remaining.",
                    timer: 10000, // 10 seconds
                    timerProgressBar: true,
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    didOpen: () => {
                        Swal.showLoading();
                        const timer = Swal.getPopup().querySelector("b");
                        timerInterval = setInterval(() => {
                            const timeLeft = Swal.getTimerLeft();
                            if (timeLeft !== undefined) {
                                timer.textContent = Math.ceil(timeLeft / 1000);
                            }
                        }, 200); // cập nhật mỗi 0.2 giây
                    },
                    willClose: () => {
                        clearInterval(timerInterval);
                    }
                });

                // AJAX call ngay lập tức
                $.ajax({
                    url: '/Home/ResendConfirmationEmail',
                    type: 'POST',
                    data: {
                        username: username,
                        __RequestVerificationToken: token
                    },
                    success: function (response) {
                        Swal.close(); // Đóng loading Swal
                        Swal.fire({
                            icon: "info",
                            title: "Verification Email Resent",
                            text: "A new verification email has been sent to your inbox. Please check your email.",
                        });
                    },
                    error: function () {
                        Swal.close(); // Đóng loading Swal
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: "There was an issue resending the email. Please try again later.",
                        });
                    }
                });
            }

        });
    }

</script>