    <!-- Slider Initialization Script -->
    <script>
        $(document).ready(function () {
            $("#slider-range").slider({
                range: true,
                min: 0,
                max: 2000,
                step: 100,
                values: [@ViewBag.MinPrice, @ViewBag.MaxPrice],
                create: function (event, ui) {
                    $(this).find('.ui-slider-handle').slice(2).remove();
                },
                slide: function (event, ui) {
                    $("#slider-range-value1").text(formatCurrency(ui.values[0]));
                    $("#slider-range-value2").text(formatCurrency(ui.values[1]));
                    $("#minPrice").val(ui.values[0]); // Cập nhật giá trị minPrice
                    $("#maxPrice").val(ui.values[1]); // Cập nhật giá trị maxPrice
                }
            });

            // Khởi tạo giá trị ban đầu
            $("#slider-range-value1").text(formatCurrency(@ViewBag.MinPrice));
            $("#slider-range-value2").text(formatCurrency(@ViewBag.MaxPrice));
        });

        function formatCurrency(value) {
            return Number(value).toLocaleString("vi-VN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + " VNĐ";
        }
    </script>
