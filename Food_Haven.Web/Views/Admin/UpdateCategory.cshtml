    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div
                            class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                            <h4 class="mb-sm-0">Store Details</h4>


                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                    <li class="breadcrumb-item active">Edit Category</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">
                    <div class="col-xxl-12">
                        <div class="card">
                            <div class="card-header align-items-center d-flex">
                                <h4 class="card-title mb-0 flex-grow-1">Edit Category</h4>
                            </div>

                            <div class="card-body">
                                <div class="live-preview">
                                    <form method="post" asp-action="UpdateCategory" asp-controller="Admin"
                                        enctype="multipart/form-data">
                                        <input type="hidden" asp-for="ID" />

                                        <div class="row">
                                            <!-- Tên danh mục -->
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label asp-for="Name" class="form-label">Category Name</label>
                                                    <input asp-for="Name" class="form-control" required
                                                        id="nameInput" />
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                    <!-- Client-side JS validation -->
                                                    <span id="nameError" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <!-- Số thứ tự (Number) -->
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Number" class="form-label">Display Order
                                                        (Number)</label>
                                                    <input asp-for="Number" class="form-control" required />
                                                    <span asp-validation-for="Number" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <!-- Commission -->
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Commission" class="form-label">Commission(%)</label>
                                                    <input asp-for="Commission" class="form-control" type="number"
                                                        step="0.1" required />
                                                    <span asp-validation-for="Commission" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <!-- Ngày tạo -->
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="CreatedDate" class="form-label">Created Date</label>
                                                    <input asp-for="CreatedDate" class="form-control" readonly
                                                        type="date" />
                                                </div>
                                            </div>

                                            <!-- Ngày sửa đổi -->
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="ModifiedDate" class="form-label">Modified
                                                        Date</label>
                                                    <input asp-for="ModifiedDate" class="form-control" readonly
                                                        type="date" />
                                                </div>
                                            </div>

                                            <!-- Hình ảnh danh mục -->
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label class="form-label">Current Category Image</label>
                                                    <div>
                                                        @if (!string.IsNullOrEmpty(Model.Img))
                                                        {
                                                            <img id="currentImage" src="/uploads/@Model.Img"
                                                                alt="Category Image" class="img-fluid rounded"
                                                                style="max-height: 200px;" />
                                                        }
                                                        else
                                                        {
                                                            <p class="text-muted">No image available</p>
                                                        }
                                                    </div>

                                                    <label class="form-label mt-2">Upload New Image</label>
                                                    <input type="file" name="ImageFile" class="form-control"
                                                        accept=".png, .jpeg, .jpg" id="imgInput">
                                                    <small class="text-muted">Supported formats: PNG, JPEG, JPG</small>



                                                    <!-- Ảnh Xem Trước -->
                                                    <div class="mt-2">
                                                        <img id="previewImage" src="" class="img-thumbnail d-none"
                                                            style="max-width: 200px; max-height: 150px;">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-lg-12 text-end">
                                                <a href="/Admin/ViewCategories"
                                                    class="btn btn-sm btn-secondary px-3">Back To Categories</a>
                                                <button type="submit" class="btn btn-sm btn-primary px-3"
                                                    id="submitBtn">Update
                                                    Category</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
