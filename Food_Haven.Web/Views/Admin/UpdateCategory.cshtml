                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                @if (ViewBag.SuccessMessage != null)
                {
                    <text>
                        <script>
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: '@ViewBag.SuccessMessage',
                                showConfirmButton: false,
                                timer: 2000
                            });
                        </script>
                    </text>
                }
                <!-- JavaScript để xem trước ảnh -->
                <script>
                    // Kiểm tra số thứ tự (Number) có bị trùng không khi edit
                    document.querySelector("input[name='Number']").addEventListener("input", function () {
                        let number = this.value;
                        let errorSpan = document.querySelector("span[data-valmsg-for='Number']");
                        let submitBtn = document.querySelector("button[type='submit']");

                        if (number) {
                            fetch(`/Admin/CheckNumberExists?number=${number}`)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.exists) {
                                        errorSpan.innerText = "This display order already exists. Choose another!";
                                        submitBtn.disabled = true;
                                    } else {
                                        errorSpan.innerText = "";
                                        submitBtn.disabled = false;
                                    }
                                });
                        } else {
                            errorSpan.innerText = "";
                            submitBtn.disabled = false;
                        }
                    });

                    document.getElementById("imgInput").addEventListener("change", function (event) {
                        var file = event.target.files[0];
                        if (file) {
                            var reader = new FileReader();

                            reader.onload = function (e) {
                                var preview = document.getElementById("previewImage");
                                preview.src = e.target.result;
                                preview.classList.remove("d-none"); // Hiện ảnh xem trước
                            };

                            reader.readAsDataURL(file);
                        }
                    });

                    document.getElementById("nameInput").addEventListener("input", function () {
                        let name = this.value.trim();
                        let id = document.querySelector("input[name='ID']").value;
                        let errorSpan = document.getElementById("nameError");
                        let submitBtn = document.getElementById("submitBtn"); // luôn đúng button

                        if (name && id) {
                            fetch(`/Admin/CheckNameExistsForUpdate?name=${encodeURIComponent(name)}&id=${id}`)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.exists) {
                                        errorSpan.innerText = "This category name already exists. Choose another!";
                                        submitBtn.disabled = true;
                                    } else {
                                        errorSpan.innerText = "";
                                        submitBtn.disabled = false;
                                    }
                                });
                        } else {
                            errorSpan.innerText = "";
                            submitBtn.disabled = false;
                        }
                    });
                </script>



