                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        const tableStores = document.getElementById("table-stores");
                        if (!tableStores) return;

                        // Lấy danh sách store từ Model (chuyển sang JSON)
                        const stores = @Html.Raw(JsonSerializer.Serialize(Model, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));

                        // Hiển thị bảng với Grid.js
                        new gridjs.Grid({
                            columns: [
                                { name: "No.", width: "60px" },
                                { name: "ID", hidden: true },
                                { name: "Store Name", width: "200px" },
                                { name: "User Name", width: "150px" },
                                { name: "Created Date", width: "150px", hidden: true },
                                { name: "Modified Date", width: "150px", hidden: true },
                                { name: "Short Description", width: "250px" },
                                { name: "Long Description", width: "250px", hidden: true },
                                { name: "Address", width: "200px" },
                                { name: "Phone", width: "150px" },
                                {
                                    name: "Image",
                                    width: "100px",
                                    formatter: (cell) => gridjs.html(`<img src="${cell}" width="50" height="50" class="rounded-circle" />`)
                                },
                                {
                                    name: "Status",
                                    width: "150px",
                                    formatter: (cell) => {
                                        let statusText = cell ? "Active" : "Disabled";
                                        let statusClass = cell ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger";
                                        return gridjs.html(`<span class="badge status-badge ${statusClass}">${statusText}</span>`);
                                    }
                                },
                                {
                                    name: "Actions",
                                    width: "150px",
                                    formatter: (_, row) => {
                                        let storeId = row.cells[1].data;
                                        let isActive = row.cells[11].data;

                                        let actionButton = isActive
                                            ? `<button class="btn btn-sm btn-danger toggle-store-btn" data-id="${storeId}" data-active="true"><i class="ri-eye-off-line align-bottom me-1"></i>Hide</button>`
                                            : `<button class="btn btn-sm btn-success toggle-store-btn" data-id="${storeId}" data-active="false"><i class="ri-eye-line align-bottom me-1"></i>Show</button>`;

                                        return gridjs.html(`<div class="d-flex gap-1">${actionButton}</div>`);
                                    }
                                }
                            ],
                            pagination: { enabled: true, limit: 10 },
                            search: true,
                            sort: true,
                            data: stores.map((store, index) => [
                                index + 1, // STT (No.)
                                store.id,
                                store.name,
                                store.userName,
                                formatDate(store.createdDate),
                                formatDate(store.modifiedDate) ?? "N/A",
                                store.shortDescriptions,
                                store.longDescriptions,
                                store.address,
                                store.phone,
                                store.img,
                                store.isActive
                            ])
                        }).render(tableStores);


                        // Format ngày (dd/MM/yyyy)
                        function formatDate(dateString) {
                            if (!dateString) return "";
                            let date = new Date(dateString);
                            return date.toLocaleDateString("en-GB");
                        }

                        // Lắng nghe sự kiện click vào nút Show/Hide
                        document.addEventListener("click", function (event) {
                            let button = event.target.closest(".toggle-store-btn");
                            if (!button) return;

                            let storeId = button.dataset.id;
                            let isActive = button.dataset.active === "true" ? false : true;

                            confirmUpdate(storeId, isActive, button);
                        });

                        // Hiển thị hộp thoại xác nhận
                        function confirmUpdate(storeId, isActive, button) {
                            let action = isActive ? "Show" : "Hide";
                            let icon = isActive ? "success" : "warning";

                            Swal.fire({
                                title: `Are you sure you want to ${action} this store?`,
                                icon: icon,
                                showCancelButton: true,
                                confirmButtonText: `Yes, ${action}`,
                                cancelButtonText: "Cancel"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    updateStoreStatus(storeId, isActive, button);
                                }
                            });
                        }

                        // Gửi request cập nhật trạng thái Store
                        function updateStoreStatus(storeId, isActive, button) {
                            fetch(`/Admin/UpdateStoreIsActive?storeId=${storeId}&isActive=${isActive}`, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' }
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        Swal.fire({
                                            title: "Success!",
                                            text: "Store status updated successfully.",
                                            icon: "success",
                                            timer: 2000,
                                            showConfirmButton: false
                                        });

                                        // Cập nhật giao diện
                                        updateUIAfterToggle(button, isActive);
                                    } else {
                                        Swal.fire({ title: "Error!", text: data.message, icon: "error" });
                                    }
                                })
                                .catch(error => {
                                    Swal.fire({ title: "Error!", text: "An unexpected error occurred.", icon: "error" });
                                    console.error('Error:', error);
                                });
                        }

                        function updateUIAfterToggle(button, isActive) {
                            // Cập nhật trạng thái active
                            button.dataset.active = isActive;
                            button.classList.remove("btn-success", "btn-danger");

                            // Thêm icon và nội dung tương ứng
                            if (isActive) {
                                button.classList.add("btn-danger");
                                button.innerHTML = '<i class="ri-eye-off-line align-bottom me-1"></i>Hide';
                            } else {
                                button.classList.add("btn-success");
                                button.innerHTML = '<i class="ri-eye-line align-bottom me-1"></i>Show';
                            }

                            // Cập nhật badge trạng thái
                            let statusBadge = button.closest("tr").querySelector(".status-badge");
                            if (statusBadge) {
                                statusBadge.classList.remove("bg-success-subtle", "text-success", "bg-danger-subtle", "text-danger");
                                if (isActive) {
                                    statusBadge.classList.add("bg-success-subtle", "text-success");
                                    statusBadge.textContent = "Active";
                                } else {
                                    statusBadge.classList.add("bg-danger-subtle", "text-danger");
                                    statusBadge.textContent = "Disabled";
                                }
                            }
                        }
                    });
                </script>

