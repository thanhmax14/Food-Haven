                        </li>
                        <!--<li class="nav-item">
                            <a class="nav-link menu-link" href="">
                                <i class="ri-notification-2-line"></i> <span>Notifications</span>
                            </a>
                        </li> -->
                    </ul>
                </div>
            </div>
            <!-- Sidebar -->
        </div>
        <div class="sidebar-background"></div>
    </div>
    <!-- Left Sidebar End -->
    <!-- Vertical Overlay-->
    <div class="vertical-overlay"></div>

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">
                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div
                            class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                            <h4 class="mb-sm-0">Create Category Form</h4>
                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="/Admin/ViewCategories">Category List</a></li>
                                    <li class="breadcrumb-item active">Create Category Form</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">
                    <div class="col-xxl-12">
                        <div class="card shadow-lg">
                            <div class="card-header align-items-center d-flex">
                                <h4 class="card-title mb-0 flex-grow-1 text-primary">Create Category Form</h4>
                            </div>

                            <div class="card-body">
                                <div class="live-preview">
                                    <p class="text-muted">Fill in the details below to add a new category.</p>

                                    <form method="post" asp-action="CreateCategory" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Name" class="form-label fw-bold">Category
                                                        Name</label>
                                                    <input asp-for="Name" class="form-control"
                                                        placeholder="Enter category name" id="nameInput" name="Name">
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                    <span class="text-danger" id="nameError"></span>
                                                    <!-- ✅ thêm dòng này -->
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Number" class="form-label fw-bold">Display
                                                        Order</label>
                                                    <input asp-for="Number" type="number" class="form-control"
                                                        placeholder="Enter display order" id="numberInput">
                                                    <span asp-validation-for="Number" class="text-danger"
                                                        id="numberError"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Commission"
                                                        class="form-label fw-bold">Commission(%)</label>
                                                    <input asp-for="Commission" type="number" step="0.1"
                                                        class="form-control" placeholder="Enter commission percentage">
                                                    <span asp-validation-for="Commission" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Upload Category Image</label>
                                                    <input type="file" name="Image" class="form-control"
                                                        accept=".png, .jpeg, .jpg" id="imgInput">
                                                    <small class="text-muted">Upload a category image (1 image
                                                        only).</small>
                                                    <div id="imagePreview" class="mt-3"></div>
                                                </div>
                                            </div>

                                            <div class="col-lg-12 text-end">
                                                <a href="/Admin/ViewCategories"
                                                    class="btn btn-sm btn-secondary px-3">Back to
                                                    List</a>
                                                <button type="submit" class="btn btn-sm btn-success px-3"
                                                    id="submitBtn"><i class="ri-add-line"></i> Create Category</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                @if (ViewBag.SuccessMessage != null)
                {
                    <text>
                        <script>
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: '@ViewBag.SuccessMessage',
                                showConfirmButton: false,
                                timer: 2000
                            }).then(() => {
                                window.location.href = '/Admin/ViewCategories';
                            });
                        </script>
                    </text>
                }

                <script>
                    // Kiểm tra số thứ tự (Number) có bị trùng không
                    document.getElementById("numberInput").addEventListener("input", function () {
                        let number = this.value;
                        let errorSpan = document.getElementById("numberError");
                        let submitBtn = document.getElementById("submitBtn");

                        if (number) {
                            fetch(`/Admin/CheckNumberExists?number=${number}`)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.exists) {
                                        errorSpan.innerText = "This display order already exists. Choose another!";
                                        submitBtn.disabled = true;
                                    } else {
                                        errorSpan.innerText = "";
                                        submitBtn.disabled = false;
                                    }
                                });
                        } else {
                            errorSpan.innerText = "";
                            submitBtn.disabled = false;
                        }
                    });

                    // Preview ảnh
                    document.getElementById("imgInput").addEventListener("change", function (event) {
                        let files = event.target.files;
                        let preview = document.getElementById("imagePreview");
                        preview.innerHTML = "";
                        if (files.length > 0) {
                            let reader = new FileReader();
                            reader.onload = function (e) {
                                let img = document.createElement("img");
                                img.src = e.target.result;
                                img.classList.add("img-thumbnail");
                                img.style.maxWidth = "150px";
                                img.style.maxHeight = "150px";
                                preview.appendChild(img);
                            };
                            reader.readAsDataURL(files[0]);
                        }
                    });

                    document.getElementById("nameInput").addEventListener("input", function () {
                        let name = this.value.trim();
                        let errorSpan = document.getElementById("nameError");
                        let submitBtn = document.getElementById("submitBtn");

                        if (name) {
                            fetch(`/Admin/CheckNameExists?name=${encodeURIComponent(name)}`)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.exists) {
                                        errorSpan.innerText = "This name already exists. Choose another!";
                                        submitBtn.disabled = true;
                                    } else {
                                        errorSpan.innerText = "";
                                        submitBtn.disabled = false;
                                    }
                                });
                        } else {
                            errorSpan.innerText = "";
                            submitBtn.disabled = false;
                        }
                    });
                </script>

                @await Html.PartialAsync("_Footer_Admin_Seller")
            </div>
            <!-- end main content-->
            <!-- END layout-wrapper -->
            <!--start back-to-top-->
            <button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
                <i class="ri-arrow-up-line"></i>
            </button>
            <!--end back-to-top-->
            <!--preloader-->
            <div id="preloader">
                <div id="status">
                    <div class="spinner-border text-primary avatar-sm" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>



