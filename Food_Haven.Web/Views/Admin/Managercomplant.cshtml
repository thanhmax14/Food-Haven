                            <script>
                                document.addEventListener("DOMContentLoaded", function () {
                                    fetch("/admin/GetComplaint", {
                                        method: "POST",
                                        headers: { "Content-Type": "application/json" },
                                        body: JSON.stringify({})
                                    })
                                        .then(response => response.json())
                                        .then(data => renderComplaintTabs(data))
                                        .catch(err => console.error("Lỗi tải khiếu nại:", err));

                                    function renderComplaintTabs(complaints) {
                                        const tabMap = {
                                            reportPendingTable: "Pending",
                                            reportAcceptTable: "Accept",
                                            reportRejectTable: "Reject"
                                        };

                                        Object.entries(tabMap).forEach(([elementId, statusFilter]) => {
                                            const filtered = complaints.filter(c =>
                                                c.status?.toUpperCase() === "REPORT TO ADMIN" &&
                                                c.reportStatus?.toUpperCase() === statusFilter.toUpperCase()
                                            );

                                            // base columns chung
                                            const baseColumns = [
                                                { id: "id", name: "ID", hidden: true },
                                                { id: "stt", name: "STT" },
                                                { id: "orderCode", name: "Order" },
                                                { id: "userName", name: "User" },
                                                { id: "description", name: "Complaint" },
                                                {
                                                    id: "createdDate", name: "Complaint Date",
                                                    formatter: formatDate
                                                },
                                                { id: "sellerReply", name: "Seller Reply" },
                                                {
                                                    id: "replyDate", name: "Reply Date",
                                                    formatter: formatDate
                                                }
                                            ];

                                            // nếu là Accept hoặc Reject thì thêm Admin
                                            if (statusFilter.toUpperCase() !== "PENDING") {
                                                baseColumns.push(
                                                    { id: "adminReply", name: "Admin Reply" },
                                                    {
                                                        id: "adminReplyDate", name: "Admin Reply Date",
                                                        formatter: formatDate
                                                    }
                                                );
                                            }

                                            baseColumns.push({
                                                name: "Action",
                                                formatter: (cell, row) => {
                                                    const id = row.cells[0].data;
                                                    return gridjs.html(`
                                                            <a href="/admin/Detailcomplant/${id}" class="btn btn-sm btn-outline-primary" target="_blank">
                                                                View
                                                            </a>
                                                        `);
                                                }
                                            });

                                            const target = document.getElementById(elementId);
                                            if (!target) return;
                                            target.innerHTML = "";

                                            new gridjs.Grid({
                                                columns: baseColumns,
                                                data: filtered.map((c, index) => ({ ...c, stt: index + 1 })),
                                                pagination: { enabled: true, limit: 10 },
                                                sort: true,
                                                search: true,
                                                language: {
                                                    search: { placeholder: "" },
                                                    pagination: {
                                                        previous: "Previous",
                                                        next: "Next",
                                                        showing: "Showing",
                                                        results: () => "complaints"
                                                    },

                                                    noRecordsFound: "Không có dữ liệu."
                                                }
                                            }).render(target);
                                        });
                                    }

                                    function formatDate(value) {
                                        if (!value) return "";
                                        const d = new Date(value);
                                        return `${d.getDate().toString().padStart(2, '0')}/${(d.getMonth() + 1).toString().padStart(2, '0')}/${d.getFullYear()} ${d.getHours().toString().padStart(2, '0')}:${d.getMinutes().toString().padStart(2, '0')}`;
                                    }
                                });
                            </script>









