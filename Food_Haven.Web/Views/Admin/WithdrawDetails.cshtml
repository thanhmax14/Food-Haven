<script type="text/javascript">

    $("#btnAccept").on("click", function () {
        var $btn = $(this);
        $btn.html('<i class="fa fa-spinner fa-spin"></i> Processing...').prop('disabled', true);

        // Gọi Swal trước, nếu xác nhận thì mới gửi request
        Swal.fire({
            title: "Are you sure?",
            text: "You want to accept withdrawal",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes",
            cancelButtonText: "NO"
        }).then((result) => {
            if (result.isConfirmed) {
                sendAcceptRequest($btn);
            } else {
                $btn.html('Accept').prop('disabled', false);
            }
        });
    });

    function sendAcceptRequest($btn) {
        $.ajax({
            url: "/Admin/AcceptWithdraw",
            type: "POST",
            data: { id: $("#idsave").val() },
            headers: {
                "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
            },
            success: function (response) {
                if (response.success) {
                    $("#btnAccept").remove();
                    $("#btnReject").remove();
                    $("#StatusInput").val("Success");
               
                    new Notify({
                        status: 'success',
                        title: 'Success!',
                        text: response.msg || 'Send successfully!',
                        effect: 'fade',
                        speed: 300,
                        showIcon: true,
                        showCloseButton: true,
                        autoclose: true,
                        autotimeout: 3000,
                        position: 'right top'
                    });
                } else {
                    new Notify({
                        status: 'error',
                        title: 'Failure',
                        text: response.msg || 'Send failed!',
                        effect: 'fade',
                        speed: 300,
                        showIcon: true,
                        showCloseButton: true,
                        autoclose: true,
                        autotimeout: 3000,
                        position: 'right top'
                    });
                }
                $btn.html('Accept').prop('disabled', false);
            },
            error: function () {
                Swal.fire('Thất bại', "An error occurred.", 'error');
                $btn.html('Accept').prop('disabled', false);
            }
        });
    }


</script>

