                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        if (document.getElementById("table-gridjs1111")) {
                            var users = @Html.Raw(JsonSerializer.Serialize(Model));

                            new gridjs.Grid({
                                columns: [
                                    { name: "UserName", width: "140" },
                                    { name: "Email", width: "150px" },
                                    {
                                        name: "PhoneNumber",
                                        width: "220px",
                                        formatter: (e) => gridjs.html(`<a href="#">${e}</a>`)
                                    },
                                    { name: "Address", width: "250px" },
                                    {
                                        name: "Birthday",
                                        width: "180px"
                                    },
                                    {
                                        name: "IsBanByadmin",
                                        width: "180px",
                                        formatter: function (value) {
                                            let statusText = value ? "Disabled" : "Active";
                                            let statusClass = value ? "bg-danger-subtle text-danger" : "bg-success-subtle text-success";
                                            return gridjs.html(`<span class="badge status-badge ${statusClass}">${statusText}</span>`);
                                        }
                                    },
                                    {
                                        name: "Actions",
                                        width: "220px",
                                        formatter: (_, row) => {
                                            let userEmail = row.cells[1].data;
                                            let isBanned = row.cells[5].data;

                                            let editButton = `
                                                <button class="btn btn-sm btn-primary me-2 edit-user-btn" data-useremail="${userEmail}">
                                                    <i class="ri-pencil-fill align-bottom me-1"></i> Edit
                                                </button>`;

                                            let banButton = isBanned
                                                ? `<button class="btn btn-sm btn-success toggle-ban-btn" data-useremail="${userEmail}" data-ban="false">
                                                       <i class="ri-eye-line align-bottom me-1"></i> Unban
                                                   </button>`
                                                : `<button class="btn btn-sm btn-danger toggle-ban-btn" data-useremail="${userEmail}" data-ban="true">
                                                       <i class="ri-eye-off-line align-bottom me-1"></i> Ban
                                                   </button>`;

                                            return gridjs.html(`
                                                <div class="d-flex flex-wrap gap-2">
                                                    ${editButton}
                                                    ${banButton}
                                                </div>
                                            `);
                                        }
                                    }
                                ],
                                pagination: { enabled: true, limit: 10, summary: true },
                                sort: true,
                                search: true,
                                data: users.map(user => [
                                    user.UserName,
                                    user.Email,
                                    user.PhoneNumber,
                                    user.Address,
                                    new Date(user.Birthday).toLocaleDateString("vi-VN", { day: '2-digit', month: '2-digit', year: 'numeric' }),
                                    user.IsBanByadmin
                                ])
                            }).render(document.getElementById("table-gridjs1111"));

                            document.body.addEventListener("click", function (e) {
                                let target = e.target.closest(".toggle-ban-btn");
                                if (target) {
                                    let userEmail = target.getAttribute("data-useremail");
                                    let isBan = target.getAttribute("data-ban") === "true";

                                    Swal.fire({
                                        title: `Are you sure?`,
                                        text: isBan ? "Do you want to ban this user?" : "Do you want to unban this user?",
                                        icon: "warning",
                                        showCancelButton: true,
                                        confirmButtonColor: isBan ? "#dc3545" : "#28a745",
                                        cancelButtonColor: "#6c757d",
                                        confirmButtonText: isBan ? "Yes, ban!" : "Yes, unban!"
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            if (isBan) {
                                                toggleUserBan(userEmail, true);
                                            } else {
                                                showUser(userEmail);
                                            }
                                        }
                                    });
                                }

                                let editButton = e.target.closest(".edit-user-btn");
                                if (editButton) {
                                    let userEmail = editButton.getAttribute("data-useremail");
                                    window.location.href = `/Admin/UpdateByAdmin?email=${encodeURIComponent(userEmail)}`;
                                }
                            });
                        }
                    });

                    function showUser(userEmail) {
                        $.ajax({
                            url: "/Admin/ShowAccount",
                            type: "POST",
                            contentType: "application/json",
                            data: JSON.stringify({ Email: userEmail }),
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: "success",
                                        title: "Success!",
                                        text: response.message,
                                        confirmButtonText: "OK"
                                    }).then(() => location.reload());
                                } else {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Error!",
                                        text: response.message,
                                        confirmButtonText: "OK"
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    icon: "error",
                                    title: "Error!",
                                    text: "An error occurred while sending the request!",
                                    confirmButtonText: "OK"
                                });
                            }
                        });
                    }

                    function toggleUserBan(userEmail, isBan) {
                        $.ajax({
                            url: "/Admin/HiddenAccount",
                            type: "POST",
                            contentType: "application/json",
                            data: JSON.stringify({ Email: userEmail, IsBanByadmin: isBan }),
