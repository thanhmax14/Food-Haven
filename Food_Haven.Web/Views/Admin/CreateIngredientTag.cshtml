                <script>
                    // Kiểm tra số thứ tự (Number) có bị trùng không
                    document.getElementById("numberInput").addEventListener("input", function () {
                        let number = this.value;
                        let errorSpan = document.getElementById("numberError");
                        let submitBtn = document.getElementById("submitBtn");

                        if (number) {
                            fetch(`/Admin/CheckNumberExists?number=${number}`)
                                .then(response => response.json())
                                .then(data => {
                                    if (data.exists) {
                                        errorSpan.innerText = "This display order already exists. Choose another!";
                                        submitBtn.disabled = true;
                                    } else {
                                        errorSpan.innerText = "";
                                        submitBtn.disabled = false;
                                    }
                                });
                        } else {
                            errorSpan.innerText = "";
                            submitBtn.disabled = false;
                        }
                    });

                    // Preview ảnh
                    document.getElementById("imgInput").addEventListener("change", function (event) {
                        let files = event.target.files;
                        let preview = document.getElementById("imagePreview");
                        preview.innerHTML = "";
                        if (files.length > 0) {
                            let reader = new FileReader();
                            reader.onload = function (e) {
                                let img = document.createElement("img");
                                img.src = e.target.result;
                                img.classList.add("img-thumbnail");
                                img.style.maxWidth = "150px";
                                img.style.maxHeight = "150px";
                                preview.appendChild(img);
                            };
                            reader.readAsDataURL(files[0]);
                        }
                    });
                </script>

